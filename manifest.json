{
    "manifest_version": 2,
    "name": "Budget Manager",
    "description": "This extension lets you handle your spendings.",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": "images/icon16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ],
    "background" : {
        "scripts" : ["eventPage.js"],
        "persistent" : false
    }
}